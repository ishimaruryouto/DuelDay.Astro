---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<style lang="scss">
    @use "@styles/_mixin.scss" as mixin;
    .book_wrap {
        @include mixin.book-wrap;

        .categry {
            @include mixin.book-categry;
            a {
                @include mixin.book-categry-a;

                &:nth-child(3) {
                    border-bottom: 2px solid tomato;
                }
            }
        }
        .batch {
            @include mixin.batch;
            .item {
                @include mixin.batch-item;
                &:nth-child(3) {
                    background-image: url("../../assets/reading.png");
                    background-size: cover;
                }
            }
        }
    }
</style>

<BaseLayout>
    <h1>マイバッチ</h1>
    <div class="book_wrap">
        <div class="categry">
            <a href="">運動</a>
            <a href="/book/clean">掃除</a>
            <a href="/book/read">読書</a>
            <a href="/book/cook">料理</a>
            <a href="/book/stretch">ストレッチ</a>
        </div>

        <div class="batch">
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
            <div class="item"></div>
