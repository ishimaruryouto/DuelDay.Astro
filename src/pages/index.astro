---
// src/pages/index.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/main.scss";
import Registration from "./account/registration.astro";
---

<style lang="scss">
	@use "@styles/_mixin.scss" as mixin;

	.page_wrap {
		h1 {
			color: #fff;
			font-size: 1.8rem;
			margin-bottom: 20px;
		}
	}

	nav {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-gap: 1rem;
		width: 80%;
		margin: 0 auto;

		a {
			width: 100%;
			height: 135px;
			display: flex;
			justify-content: center;
			align-items: center;
			background: #ba2b1d;
			color: #fff;
			font-size: 1.4rem;
			border-radius: 8px;
			text-decoration: none;

			&:last-child {
				width: 100%;
				height: 120px;
				grid-column: 1 / span 2;
			}
		}
	}
</style>

<BaseLayout>
	<div class="page_wrap">
		<h1>ホーム</h1>
		<nav>
			<a href="/gacha">ガチャ</a>
			<a href="/book">図鑑</a>
			<a href="/duel">デュエル</a>
		</nav>
	</div>
</BaseLayout>
